<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Entidade Criada</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link rel="stylesheet" href="/stylesheets/created_style.css">
</head>
<body>
    <h2>Entidade Criada com sucesso</h2>
    <div class="container">
        <div class="informacao">
            <span class="label">Nome:</span>
            <span class="value"><%= entidade.nome %></span>
        </div>
        <div class="informacao">
            <span class="label">Email:</span>
            <span class="value"><%= entidade.email %></span>
        </div>
        <div class="informacao">
            <span class="label">Contacto:</span>
            <span class="value"><%= entidade.contacto %></span>
        </div>
        <div class="informacao">
            <span class="label">Morada:</span>
            <span class="value"><%= entidade.morada %></span>
        </div>
        <div class="informacao">
            <span class="label">Descrição:</span>
            <span class="value"><%= entidade.descricao %></span>
        </div>
        <div class="informacao">
            <span class="label">Foto de Perfil:</span>
            <img src="/<%=entidade.fotoPerfil %>" alt="Foto de Perfil" class="foto-perfil">
        </div>
        
        <div class="informacao">
            <span class="label">Outras Fotos:</span>
            <ul>
                <% entidade.fotos.forEach(function(foto) { %>
                    <li>
                        <img src="/<%= foto %>" alt="Foto" class="foto-adicional">
                    </li>
                <% }); %>
            </ul>
        </div>
        

    <a href="/" class="link">Concluido</a>
</body>
</html>
